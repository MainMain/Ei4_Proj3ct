	<!-- Script nécessaires pour le serveur -->
	<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	
	<form style="display:none;" id="LogoutForm" class="logoutform" action="/" method=POST>
		<input type="hidden"name="_method" value="delete"/>
		<input type="submit" value="Retour chez les vivants ?!" align=right>
	</form>
	
	<script>
		/*********** EVENEMENTS LORS DE RECEPETION D'UNE COMMUNICATION SERVEUR -> CLIENT **************/
		var socket = io.connect('http://localhost:443');
		
		<% if(sessionID) { %>
			$( document ).ready(function()
			{
				socket.emit('INFO_USER_CS', '<%= sessionID %>', '<%= username %>', "accueil");
			});
		<% } %>
		
		socket.on("DECONEXION_SC", function(msg)
		{
			alert(msg);
			$.post("/", { _method: "delete" }, function()
			{
				document.location = "/";
			});
		});
		
	</script>
</body>
